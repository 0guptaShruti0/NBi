<?xml version="1.0" encoding="utf-8" ?>
<testSuite name="The Query TestSuite" xmlns="http://NBi/TestSuite">
	<test name="result-set with rows/cells" uid="0000">
		<system-under-test>
			<execution>
        <query>
          select 1, 'alpha' union all select 2, 'beta' union all select 3, 'gamma'
        </query>
			</execution>
		</system-under-test>
		<assert>
			<equalTo>
				<resultSet>
					<row>
						<cell>1</cell>
            <cell>alpha</cell>
					</row>
          <row>
            <cell>2</cell>
            <cell>beta</cell>
          </row>
          <row>
            <cell>3</cell>
            <cell>gamma</cell>
          </row>
				</resultSet>
			</equalTo>
		</assert>
	</test>
  <test name="rest with sub-object" uid="0001">
    <system-under-test>
      <execution>
        <rest path="http://calapi.inadiutorium.cz/api/v0/en/calendars/default/2015/6/27"/>
      </execution>
    </system-under-test>
    <assert>
      <equalTo>
        <resultSet>
          <row>
            <cell>2015-06-27</cell>
            <cell>ordinary</cell>
            <cell>12</cell>
            <cell>
              <row>
                <cell>(empty)</cell>
                <cell>green</cell>
              </row>
              <row>
                <cell>Saint Cyril of Alexandria, bishop and doctor</cell>
                <cell>white</cell>
              </row>
            </cell>
            <cell>saturday</cell>
          </row>
        </resultSet>
      </equalTo>
    </assert>
  </test>
  <test name="rest with arrays" uid="0002">
    <system-under-test>
      <execution>
        <rest path="volumes">
          <location base-address="https://www.googleapis.com/books/v1/"/>
          <parameter name="q">isbn:3905829800</parameter>
        </rest>
      </execution>
    </system-under-test>
    <assert>
      <equalTo>
        <resultSet>
          <row>
            <cell column-name="totalItems">1</cell>
            <cell column-name="items">
              <row>
                <cell column-name="etag">JWDdDeGHry0</cell>
                <cell column-name="volumeInfo">
                  <row>
                    <cell column-name="subtitle">Educational Complex Onwards 1995-2008</cell>
                    <cell column-name="authors">
                      <item>Mike Kelley</item>
                      <item>Anne Pontégnie</item>
                    </cell>
                  </row>
                </cell>
              </row>
            </cell>
          </row>
        </resultSet>
      </equalTo>
    </assert>
  </test>
  <test name="rest with single-element in array" uid="0003">
    <system-under-test>
      <execution>
        <rest path="volumes">
          <location base-address="https://www.googleapis.com/books/v1/"/>
          <parameter name="q">isbn:0747532699</parameter>
        </rest>
      </execution>
    </system-under-test>
    <assert>
      <equalTo>
        <resultSet>
          <row>
            <cell column-name="totalItems">1</cell>
            <cell column-name="items">
              <row>
                <cell column-name="etag">511pTu1Klc4</cell>
                <cell column-name="volumeInfo">
                  <row>
                    <cell column-name="title">Harry Potter 1 and the Philosopher's Stone</cell>
                    <cell column-name="authors">J. K. Rowling</cell>
                  </row>
                </cell>
              </row>
            </cell>
          </row>
        </resultSet>
      </equalTo>
    </assert>
  </test>
  
</testSuite>
