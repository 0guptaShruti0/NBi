<?xml version="1.0" encoding="utf-8" ?>
<testSuite name="The Query TestSuite" xmlns="http://NBi/TestSuite">
	<test name="rest with attributes specified" uid="0000">
		<system-under-test>
			<execution>
        <rest path="calendars/default/2015/6/27">
          <location base-address="http://calapi.inadiutorium.cz/api/v0/en/" content-type="json"/>
          <credentials type="anonymous"/>
        </rest>
			</execution>
		</system-under-test>
		<assert>
			<equalTo>
				<resultSet>
					<row>
						<cell>2015-06-27</cell>
            <cell>ordinary</cell>
            <cell>12</cell>
            <cell>
              <row>
                <cell>(empty)</cell>
                <cell>green</cell>
              </row>
              <row>
                <cell>Saint Cyril of Alexandria, bishop and doctor</cell>
                <cell>white</cell>
              </row>
            </cell>
            <cell>saturday</cell>
					</row>
				</resultSet>
			</equalTo>
		</assert>
	</test>
  <test name="rest with defaults" uid="0001">
    <system-under-test>
      <execution>
        <rest path="http://calapi.inadiutorium.cz/api/v0/en/calendars/default/2015/6/27"/>
      </execution>
    </system-under-test>
    <assert>
      <equalTo>
        <resultSet>
          <row>
            <cell>2015-06-27</cell>
            <cell>ordinary</cell>
            <cell>12</cell>
            <cell>
              <row>
                <cell>(empty)</cell>
                <cell>green</cell>
              </row>
              <row>
                <cell>Saint Cyril of Alexandria, bishop and doctor</cell>
                <cell>white</cell>
              </row>
            </cell>
            <cell>saturday</cell>
          </row>
        </resultSet>
      </equalTo>
    </assert>
  </test>
  <test name="rest with parameters" uid="0002">
    <system-under-test>
      <execution>
        <rest path="calendars/$calendar$/$year$/$month$/$day$">
          <location base-address="http://calapi.inadiutorium.cz/api/v0/en/"/>
          <parameter name="calendar">default</parameter>
          <parameter name="year">2015</parameter>
          <parameter name="month">6</parameter>
          <parameter name="day">27</parameter>
        </rest>
      </execution>
    </system-under-test>
    <assert>
      <equalTo>
        <resultSet>
          <row>
            <cell>2015-06-27</cell>
            <cell>ordinary</cell>
            <cell>12</cell>
            <cell>
              <row>
                <cell>(empty)</cell>
                <cell>green</cell>
              </row>
              <row>
                <cell>Saint Cyril of Alexandria, bishop and doctor</cell>
                <cell>white</cell>
              </row>
            </cell>
            <cell>saturday</cell>
          </row>
        </resultSet>
      </equalTo>
    </assert>
  </test>
</testSuite>
